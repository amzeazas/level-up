<li class="quest_missions_list">
  <h4 id="mission_description_<%= mission.id %>"><%= mission.description %></h4>
  <h5>
    <ul class="mission_details">
      <% if mission.details != "" %>
        <li><u>Mission Details:</u> <%= mission.details %></li>
      <% end %>
      <% if mission.target_number != nil %>
        <li><u>Progress:</u> <%= mission.current_number %> / <%= mission.target_number %></li>
      <% end %>
      <li><u>Completed?</u> - <%= mission.completed? %></li>
      <% if mission.completed? %>
        <li>Completed On <%= mission.completion_date.strftime("%d %b. %Y") %></li>
        <li><u>Completion Details:</u> <%= mission.completion_details %></li>
      <% end %>
    </ul>
  </h5>
  <div id="mission_buttons">
    <%= link_to "Edit Mission", edit_quest_mission_path(@quest, mission), class:"btn btn-default btn-xs", id:"edit_mission_link_#{mission.id}", remote: true %>
    <%= link_to "Delete Mission", quest_mission_path(@quest, mission), class:"btn btn-danger btn-xs",
                                  :data => {:confirm => "Are you sure you want to delete this mission?",
                                            :method => "delete"}%>
  </div>
</li>
