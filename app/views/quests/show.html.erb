<div class="row pull-right", id="quest-buttons">
  <%= link_to "Edit Quest", edit_user_quest_path(@user, @quest), class:"btn btn-default", id:"edit-quest-button", remote: true %>
  <%= link_to "Delete Quest", user_quest_path(@user, @quest), class:"btn btn-danger",
                              :data => {:confirm => "Are you sure you want to delete this quest and all associated missions?",
                                        :method => "delete"}%>
</div>
<div class="container-fluid", id="quest-show">
  <h1 id="quest-name"><%= @quest.name %></h1>
  <ul style="list-style:none">
    <% @quest.missions.order(description: :asc).each do |mission| %>
      <li class="quest-missions-list">
        <h4 id="mission-description-<%= mission.id %>"><%= mission.description %></h4>
        <%= link_to "Edit Mission", edit_quest_mission_path(@quest, mission), class:"btn btn-default btn-xs", id:"edit_mission_link_#{mission.id}", remote: true %>
        <%= link_to "Delete Mission", quest_mission_path(@quest, mission), class:"btn btn-danger btn-xs",
                                      :data => {:confirm => "Are you sure you want to delete this mission?",
                                                :method => "delete"}%>
      </li>
    <% end %>
  </ul>
</div>
