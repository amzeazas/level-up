<div class="row pull-right", id="quest-buttons">
  <%= link_to "Edit Quest", edit_user_quest_path(@user, @quest), class:"btn btn-default", id:"edit-quest-button", remote: true %>
  <%= link_to "Delete Quest", user_quest_path(@user, @quest), class:"btn btn-danger",
                              :data => {:confirm => "Are you sure you want to delete this quest and all associated missions?",
                                        :method => "delete"}%>
</div>
<div class="container-fluid", id="quest-show">
  <h1 id="quest-title"><%= @quest.title %></h1>
  <ul>
    <% @quest.missions.order(description: :asc).each do |mission| %>
      <%= render "missions/detail", mission:mission %>
    <% end %>
  </ul>
</div>
